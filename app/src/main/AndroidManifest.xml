<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.louisccc.tripal">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:name=".model.TriApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.TripalActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.TripActivity"
            android:configChanges="orientation"
            android:label="Trip"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.FriendActivity"
            android:configChanges="orientation"
            android:label="Friend"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ItemActivity"
            android:configChanges="orientation"
            android:label="Item"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.EditItemActivity"
            android:configChanges="orientation"
            android:label="Edit Item"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activity.ResultActivity"
            android:configChanges="orientation"
            android:label="Trip Result"
            android:screenOrientation="portrait" />

    </application>

</manifest>
