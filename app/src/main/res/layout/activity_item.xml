<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.TripActivity">

    <ImageView
        android:id="@+id/item_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tripal_menu_sync" />

    <TextView
        android:id="@+id/item_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/item_thumbnail"
        android:text="Ay chen" />

    <TextView
        android:id="@+id/item_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_timestamp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/item_thumbnail"
        android:text="Taipei" />

    <TextView
        android:id="@+id/item_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_thumbnail"
        android:layout_margin="5dp"
        android:text="good item" />

    <TextView
        android:id="@+id/item_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_note"
        android:layout_margin="5dp"
        android:text="$10000" />

    <TextView
        android:id="@+id/item_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_amount"
        android:layout_margin="5dp"
        android:text="A.y Chen" />

    <ListView
        android:id="@+id/item_dept_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_owner"
        android:dividerHeight="1dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp" />

</RelativeLayout>
