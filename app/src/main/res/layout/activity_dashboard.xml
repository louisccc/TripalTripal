<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TripalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tripal list"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/trips_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2014/01/28~2016/02/20"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trips_total_year_spend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NT$54000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trips_remaining_year_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NT$16000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Ongoing Trips" />

    <ListView
        android:id="@+id/trips_ongoing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/trips_ongoing_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/empty_ongoing_trips"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Previous Trips" />

    <ListView
        android:id="@+id/trips_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/trips_history_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/empty_history_trips"
        android:visibility="gone" />


</LinearLayout>
