<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.TripActivity">

    <TextView
        android:id="@+id/trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="trip name"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_remain_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_name"
        android:layout_margin="5dp"
        android:text="Remaining times"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trip_remain_times"
        android:layout_margin="5dp"
        android:text="Total Spent"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_total_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trip_remain_times"
        android:layout_margin="5dp"
        android:text="Total Spent"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trip_total_spent"
        android:layout_margin="5dp"
        android:text="Current Balance"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_curr_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trip_total_spent"
        android:layout_margin="5dp"
        android:text="Current balance"
        android:textColor="@android:color/white" />

    <ExpandableListView
        android:id="@+id/trip_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_curr_balance" />

    <Button
        android:id="@+id/trip_check"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:singleLine="true"
        android:text="Check" />

</RelativeLayout>
