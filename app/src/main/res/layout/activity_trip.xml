<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.TripActivity">

    <TextView
        android:id="@+id/trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="trip name"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_remain_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_name"
        android:layout_margin="5dp"
        android:text="Remaining times"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trip_remain_times"
        android:layout_margin="5dp"
        android:text="Total Spent"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_total_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trip_remain_times"
        android:layout_margin="5dp"
        android:text="Total Spent"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trip_total_spent"
        android:layout_margin="5dp"
        android:text="Current Balance"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_curr_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trip_total_spent"
        android:layout_margin="5dp"
        android:text="Current balance"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/trip_members_banner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/trip_curr_balance"
        android:background="#4f4f4f"
        android:gravity="center"
        android:text="Members"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/trip_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_members_banner"
        android:dividerHeight="1dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/trip_records_banner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/trip_members"
        android:background="#4f4f4f"
        android:gravity="center"
        android:text="Items"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/trip_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_records_banner"
        android:dividerHeight="1dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/trip_records_empty"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/trip_records_banner"
        android:gravity="center"
        android:text="add some items~" />

    <Button
        android:id="@+id/trip_check"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:singleLine="true"
        android:text="Check" />

</RelativeLayout>
