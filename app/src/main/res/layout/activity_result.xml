<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.TripActivity">

    <TextView
        android:id="@+id/result_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="trip name" />

    <TextView
        android:id="@+id/result_trip_remain_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_trip_name"
        android:layout_margin="5dp"
        android:text="Remaining times" />

    <TextView
        android:id="@+id/result_trip_total_spent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_trip_remain_times"
        android:layout_margin="5dp"
        android:text="Total Spent" />

    <TextView
        android:id="@+id/result_trip_curr_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_trip_total_spent"
        android:layout_margin="5dp"
        android:text="Current balance" />

    <TextView
        android:id="@+id/result_trip_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_trip_curr_balance"
        android:layout_margin="5dp"
        android:text="Current balance" />

    <ListView
        android:id="@+id/result_balance_sheet"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/result_trip_summary"
        android:dividerHeight="1dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp" />

</RelativeLayout>
